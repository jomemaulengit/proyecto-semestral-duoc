<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/styles/index-style.css" rel="stylesheet">
  <title>Pet shop</title>
</head>

<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/img/logo.png" width="150"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <!-- Button trigger modal -->
            <button type="button" class="btn active" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Mi cuenta
            </button>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="cart">Carrito</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="history">Mis compras</a>
          </li>

        </ul>
        <form class="d-flex">
          <input class="form-control me-2 customSearch" type="search" placeholder="Buscar productos"
            aria-label="Search">
          <button class="btn btn-outline-success" type="submit"><i class="material-icons">search</i></button>
        </form>
        <form action="register">
          <button class="btn btn-warning me-3 ms-3" type="submit">Registrarse</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- BANNER -->
  <div class="hero-image"> </div>

  <!-- CONTENT -->
  <div class="d-flex flex-wrap-reverse text-center mt-5 mb-5 justify-content-around lol">
    <div class="p-2 bd-highlight">
      <div class="card">
        <img src="/img/petacc.webp" width="120px" style="margin:20px">
        <p style="font-weight:900">Juguetes</p>

      </div>
    </div>
    <div class="p-2 bd-highlight">
      <div class="card">
        <img src="/img/petfood.png" width="120px" style="margin:20px">
        <p style="font-weight:900">Alimentos</p>

      </div>
    </div>
    <div class="p-2 bd-highlight">
      <div class="card">
        <img src="/img/pettoy.png" width="120px" style="margin:20px">
        <p style="font-weight:900">Accesorios</p>

      </div>
    </div>
    <div class="p-2 bd-highlight">
      <div class="card">
        <img src="/img/petbed.png" width="120px" style="margin:20px">
        <p style="font-weight:900">Camas y casas</p>
      </div>
    </div>
  </div>

  <!-- PRODUCTS -->
  <div class="d-flex flex-wrap-reverse text-center mt-5 mb-5 justify-content-center lol">
    <a href="details" class="btn">
      <div class="card btn m-3" type="submit" style="width: 18rem;">
        <img src="/img/correa1.jpg" class="card-img-top " alt="c1" width="100px" height="250px">
        <div class="card-body">
          <h5 class="card-title">Flexi Flexi classic blue</h5>
          <p class="card-text">correa para perros extra larga retractil
          </p>
          <a href="#" class="btn btn-success">Agregar al carrito</a>
        </div>
      </div>
    </a>

  </div>

  <!-- LOGIN -->

  <!-- Modal -->
  <div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="exampleModalLabel">Login</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="input-group form-group mb-3 ">
              <div class="input-group-prepend">
                <span class="input-group-text" style="background-color: gold;"><i
                    class="material-icons">person</i></span>
              </div>
              <input type="text" class="form-control" placeholder="username">
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text" style="background-color: gold;"><i class="material-icons">key</i></span>
              </div>
              <input type="password" class="form-control" placeholder="username">
            </div>
          </form>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            No tienes una cuenta aun? <a href="register"> Registrarse</a>
          </div>
          <div class="d-flex justify-content-center">
            <a href="forgot">Olvidaste tu contraseña?</a>
          </div>
        </div>
        <div class="modal-footer">
          <form action="/">
            <button type="submit" class="btn btn-primary">Iniciar sesion</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- FOOTER -->
  <div class="container">
    <footer class="py-3 my-4">
      <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Inicio</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Categorias</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Fundacion</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Contacto</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Redes</a></li>
      </ul>
      <p class="text-center text-muted">© 2022 Jose Maulen, Diseño web</p>
    </footer>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
