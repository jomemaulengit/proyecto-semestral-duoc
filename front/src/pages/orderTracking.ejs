  <!-- ORDER TRACKING----------------------------------------------------------------- -->
  <div class="container">
    <article class="card">
      <header class="card-header"> Donde esta mi pedido </header>
      <div class="card-body">
        <h6>Numero pedido: OD45345345435</h6>
        <article class="card">
          <div class="card-body row">
            <div class="col"> <strong>Tiempo estimado:</strong> <br>29 nov 2019 </div>
            <div class="col"> <strong>Despacho para:</strong> <br> BLUEDART, | <i class="fa fa-phone"></i> +5698675986
            </div>
            <div class="col"> <strong>estado:</strong> <br> Recivido por repartidor </div>
            <div class="col"> <strong>Tracking #:</strong> <br> BD045903594059 </div>
          </div>
        </article>
        <div class="track">
          <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span class="text">Order
              confirmed</span> </div>
          <div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> Picked by
              courier</span> </div>
          <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the way
            </span> </div>
          <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for
              pickup</span> </div>
        </div>
        <hr>
        <ul class="row">
          <li class="col-md-4">
            <figure class="itemside mb-3">
              <div class="aside"><img src="img/correa1.jpg" class="img-sm border"></div>
              <figcaption class="info align-self-center">
                <p class="title">Flexi flexi correa retractil<br> 2 metros</p> <span class="text-muted">$12.990 </span>
              </figcaption>
            </figure>
          </li>
          <li class="col-md-4">
            <figure class="itemside mb-3">
              <div class="aside"><img src="img/alimentoGato1.jpg" class="img-sm border"></div>
              <figcaption class="info align-self-center">
                <p class="title">Taste of the wild<br> sabor salmon</p> <span class="text-muted">$15.990 </span>
              </figcaption>
            </figure>
          </li>
        </ul>
        <hr> <a href="history" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-left"></i> Back to
          orders</a>
      </div>
    </article>
  </div>


  <!-- Modal -->
  <div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="exampleModalLabel">Login</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="input-group form-group mb-3 ">
              <div class="input-group-prepend">
                <span class="input-group-text" style="background-color: gold;"><i
                    class="material-icons">person</i></span>
              </div>
              <input type="text" class="form-control" placeholder="username">
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text" style="background-color: gold;"><i class="material-icons">key</i></span>
              </div>
              <input type="password" class="form-control" placeholder="username">
            </div>
          </form>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            No tienes una cuenta aun? <a href="register"> Registrarse</a>
          </div>
          <div class="d-flex justify-content-center">
            <a href="forgot">Olvidaste tu contraseña?</a>
          </div>
        </div>
        <div class="modal-footer">
          <form action="/">
            <button type="submit" class="btn btn-primary">Iniciar sesion</button>
          </form>
        </div>
      </div>
    </div>
  </div>

